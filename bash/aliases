# Theses aliases comes from different places on the web and personal additions.
# Most of them are from some PeepCode Screencasts. (http://peepcode.com)

# Utility
case $dotfiles_env in
  'local'  )
    alias ea='mate -w ~/.dotfiles/bash/aliases && source ~/.dotfiles/bash/aliases'
    alias ee='mate -w ~/.dotfiles/bash/env && source ~/.dotfiles/bash/env'
  ;;
  'remote' )
    alias ea='nano ~/.dotfiles/bash/aliases && source ~/.dotfiles/bash/aliases'
    alias ee='nano ~/.dotfiles/bash/env && source ~/.dotfiles/bash/env'
  ;;
esac
function take () {
  mkdir $1
  cd $1
}
function reload () {
  echo 'Reloading BASH environment'
  source ~/.bashrc
}

# Finder
alias o='open . &'

# Processes
alias tu='top -o cpu' # cpu
alias tm='top -o vsize' # memory

# Git
alias g='git status'
alias gb='git branch'
alias gba='git branch -a'
alias gc='git commit -v'
alias gca='git commit -v -a'
# Commit pending changes and quote all args as message like "gg Implemented new features and fixed bugs"
function gg () {
  git commit -v -a -m "$*"
}
alias gco='git checkout'
alias gl='git pull'
alias gp='git push'
case $dotfiles_env in
  'local'  )
    alias gd='git diff | mate'
    alias gdm='git diff master | mate'
    alias gx='gitx --all';;
  'remote' )
    alias gd='git diff'
    alias gdm='git diff master';;
esac

# Shortcuts to commands and builtins
alias l='ls -la'
alias ll='ls -laGh'
alias ..='cd ..'

# Rails
alias ss='./script/server'
alias sg='./script/generate'
alias sc='./script/console'
alias r='rake'
alias rmig='rake db:migrate'

# Dev prompt toggle. Toggles between standard PS1 and a colored, VCS aware prompt.
function devp () {
  prompts=${#prompt[@]}
  (( current_ps1++ ))
  if [[ $current_ps1 -gt $prompts ]]; then
    current_ps1=1
  fi
  PS1=${prompt[$current_ps1]}
}